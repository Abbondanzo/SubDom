{
  "name": "subdom",
  "version": "1.0.0",
  "description": "A temporary redirect service",
  "main": "lib/index.js",
  "scripts": {
    "build": "yarn clean && yarn tsc && yarn copy-assets",
    "clean": "rimraf lib/*",
    "tsc": "tsc",
    "copy-assets": "cp -R src/views lib && cp -R public/* lib",
    "dev": "ts-node ./src/index.ts",
    "deploy": "NODE_ENV=production pm2 start lib/index.js --name='subdom' --log-date-format 'DD-MM HH:mm:ss.SSS'"
  },
  "keywords": [
    "subdomain",
    "redirect"
  ],
  "author": "Peter Abbondanzo",
  "license": "MIT",
  "dependencies": {
    "ejs": "^3.1.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
